<p id="notice"><%= notice %></p>

<h1>Everyone's To Do Lists</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Deadline</th>
      <th>Completion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <ul>
        <li><%= list.task %></li>
        <td><%= list.deadline %></td>
        <td><%= list.completion %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </ul>
    <% end %>
  </tbody>
</table>

<br>

